import React from 'react';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { Badge } from "@/components/ui/badge";
import { 
  Gauge, Fuel, Cog, Zap, Calendar, Palette, 
  Users, DoorOpen, Package, Award 
} from "lucide-react";

export default function SpecsTable({ vehicle }) {
  const SpecRow = ({ icon: Icon, label, value }) => (
    <div className="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
      <div className="flex items-center gap-3 text-gray-600">
        <Icon className="w-4 h-4" />
        <span className="text-sm font-medium">{label}</span>
      </div>
      <span className="text-sm font-semibold text-gray-900">{value || 'N/A'}</span>
    </div>
  );

  return (
    <Card className="border-none shadow-lg">
      <CardHeader className="border-b bg-gradient-to-r from-gray-50 to-white">
        <CardTitle>Vehicle Specifications</CardTitle>
      </CardHeader>
      <CardContent className="p-6">
        <Tabs defaultValue="overview">
          <TabsList className="grid w-full grid-cols-3 mb-6">
            <TabsTrigger value="overview">Overview</TabsTrigger>
            <TabsTrigger value="performance">Performance</TabsTrigger>
            <TabsTrigger value="features">Features</TabsTrigger>
          </TabsList>

          <TabsContent value="overview" className="space-y-0">
            <SpecRow icon={Calendar} label="Year" value={vehicle.year} />
            <SpecRow icon={Package} label="Model" value={`${vehicle.model} ${vehicle.trim || ''}`} />
            <SpecRow icon={Award} label="Condition" value={vehicle.condition?.toUpperCase()} />
            <SpecRow icon={Gauge} label="Mileage" value={vehicle.mileage ? `${vehicle.mileage.toLocaleString()} miles` : 'N/A'} />
            <SpecRow icon={Palette} label="Exterior Color" value={vehicle.exterior_color} />
            <SpecRow icon={Palette} label="Interior Color" value={vehicle.interior_color} />
            <SpecRow icon={Users} label="Seating" value={vehicle.seating ? `${vehicle.seating} seats` : 'N/A'} />
            <SpecRow icon={DoorOpen} label="Doors" value={vehicle.doors} />
          </TabsContent>

          <TabsContent value="performance" className="space-y-0">
            <SpecRow icon={Cog} label="Engine" value={vehicle.engine} />
            <SpecRow icon={Zap} label="Horsepower" value={vehicle.horsepower ? `${vehicle.horsepower} hp` : 'N/A'} />
            <SpecRow icon={Zap} label="Torque" value={vehicle.torque ? `${vehicle.torque} lb-ft` : 'N/A'} />
            <SpecRow icon={Cog} label="Transmission" value={vehicle.transmission} />
            <SpecRow icon={Cog} label="Drivetrain" value={vehicle.drivetrain} />
            <SpecRow icon={Fuel} label="Fuel Type" value={vehicle.fuel_type} />
            <SpecRow icon={Fuel} label="MPG City" value={vehicle.mpg_city ? `${vehicle.mpg_city} mpg` : 'N/A'} />
            <SpecRow icon={Fuel} label="MPG Highway" value={vehicle.mpg_highway ? `${vehicle.mpg_highway} mpg` : 'N/A'} />
            <SpecRow icon={Fuel} label="MPG Combined" value={vehicle.mpg_combined ? `${vehicle.mpg_combined} mpg` : 'N/A'} />
          </TabsContent>

          <TabsContent value="features" className="space-y-4">
            {vehicle.features && vehicle.features.length > 0 ? (
              <div className="grid grid-cols-1 md:grid-cols-2 gap-2">
                {vehicle.features.map((feature, index) => (
                  <Badge
                    key={index}
                    variant="outline"
                    className="justify-start px-3 py-2 text-sm"
                  >
                    {feature}
                  </Badge>
                ))}
              </div>
            ) : (
              <p className="text-gray-500 text-sm">No additional features listed</p>
            )}
            
            {vehicle.description && (
              <div className="mt-6 pt-6 border-t">
                <h4 className="font-semibold mb-2">Description</h4>
                <p className="text-sm text-gray-600 leading-relaxed">
                  {vehicle.description}
                </p>
              </div>
            )}
          </TabsContent>
        </Tabs>
      </CardContent>
    </Card>
  );
}
